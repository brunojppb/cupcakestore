<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="true">
    Log in 
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu" role="menu">
  
    <%= form_for(:session, url: login_path, html: { class: 'form-horizontal', style: 'padding: 10px 10px;' }) do |f| %>
      
      <li><%= f.email_field :email, class: 'form-control', placeholder: 'Email', style: 'margin-bottom: 5px;' %></li>

      <li><%= f.password_field :password, class: 'form-control', placeholder: t('password') %></li>

      <li>
        <%= f.check_box :remember_me%>
        <span><%= t('remember_me') %></span>
      </li>

      <li style="padding-top: 5px;">
        <%= f.submit t('login'), class: 'btn btn-primary btn-block' %>
      </li>
    <% end %>
  </ul>
</li>