<header class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
      <!-- Mobile Only -->
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-menu">
          <span class="sr-only">Toggle navigation</span>
          <span class="glyphicon glyphicon-align-justify"></span>
        </button>
        <%= link_to "Cupcake Store", root_path, class: "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="navbar-menu">
        <ul class="nav navbar-nav">
          <li class="active"> 
              <%= link_to root_path do %> 
                <span class="glyphicon glyphicon-home"></span> <span class="sr-only">(current)</span>
              <%end%>
          </li>
          <li><a href="#">Cupcakes</a></li>
          <li><%= link_to t('signup'), signup_path %></li>
          <li><a href="#">Contato</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <%= render 'shared/logged_in_menu' %>
          <% else %>
            <%= render 'shared/logged_out_menu' %>
          <% end %>
        </ul>
      </div>
    </div>
</header>